{
  "enabled": true,
  "autoSelect": false,
  "autoTrigger": true,
  "autoTriggerMinSize": 3,
  "triggerLikeVim": false,
  "latexProvider": true,
  "flowProvider": true,
  "flowProviderScanCurrent": true,
  "flowProviderTokenizeStrategy": "default",
  "flowWordSeparators": {
    "default": "~?!@#$%^&*()-=+[{]}|;:' \",.<>/",
    "arabic": "~?!@#$%^&*()-=+[{]}|;:' \",.<>/،؛",
    "japanese": "~?!@#$%^&*()-=+[{]}|;:' \",.<>/"
  }
}